<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/red_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimaryVariant</item>
        <item name="boxBackgroundColor">#00000000</item>
        <item name="android:textColorHint">?colorPrimary</item>
        <item name="hintTextColor">?colorPrimaryVariant</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Ejercitacion2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/violet_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>

        <item name="buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
    </style>
</resources>