<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/yellowBox"
        android:background="@color/yellow"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/centered"
        android:layout_marginBottom="160dp" />

    <View
        android:id="@+id/orangeBox"
        android:background="@color/orange"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@id/yellowBox"
        android:layout_marginEnd="0dp"
        android:layout_alignTop="@id/yellowBox"
        android:layout_marginTop="0dp" />

    <View
        android:id="@+id/centered"
        android:background="@color/lgBlue"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/greenBox"
        android:background="@color/green"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/centered"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <View
        android:id="@+id/lgGreenBox"
        android:background="@color/lgGreen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/greenBox"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/greenBox"
        android:layout_marginBottom="70dp" />

</RelativeLayout>